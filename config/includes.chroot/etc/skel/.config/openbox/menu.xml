<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">

  <menu id="root-menu" label="  Litecraft">

    <!-- Quick launch -->
    <item label=" Terminal">
      <action name="Execute">
        <command>kitty</command>
      </action>
    </item>

    <item label=" File Manager">
      <action name="Execute">
        <command>thunar</command>
      </action>
    </item>

    <item label=" Browser">
      <action name="Execute">
        <command>firefox</command>
      </action>
    </item>

    <separator/>

    <!-- Utilities -->
    <menu id="utils" label=" Utilities">

      <item label=" Screenshot (Full)">
        <action name="Execute">
          <command>scrot ~/Pictures/screenshot_%Y-%m-%d_%H-%M-%S.png</command>
        </action>
      </item>

      <item label=" Screenshot (Select)">
        <action name="Execute">
          <command>scrot -s ~/Pictures/screenshot_%Y-%m-%d_%H-%M-%S.png</command>
        </action>
      </item>

      <item label=" Volume Control">
        <action name="Execute">
          <command>pavucontrol</command>
        </action>
      </item>

      <item label="  Wallpaper Changer">
        <action name="Execute">
          <command>nitrogen</command>
        </action>
      </item>

      <item label=" Night Light">
        <action name="Execute">
          <command>redshift -O 4500</command>
        </action>
      </item>

    </menu>

    <separator/>

    <!-- Applications -->
    <menu id="apps" label=" Applications">

      <item label="  Text Editor">
        <action name="Execute">
          <command>mousepad</command>
        </action>
      </item>

      <item label="  Image Viewer">
        <action name="Execute">
          <command>feh</command>
        </action>
      </item>

      <item label="  Music Player">
        <action name="Execute">
          <command>vlc</command>
        </action>
      </item>

      <item label=" App Launcher">
        <action name="Execute">
          <command>bash ~/.config/polybar/forest/scripts/launcher.sh </command>
        </action>
      </item>

    </menu>

    <separator/>

    <!-- Power -->
    <menu id="power" label="  Power">

      <item label="   Restart Openbox">
        <action name="Reconfigure"/>
      </item>

      <item label="   Lock Screen">
        <action name="Execute">
          <command>i3lock</command>
        </action>
      </item>

      <item label="   Logout">
        <action name="Exit"/>
      </item>

      <item label="   Reboot">
        <action name="Execute">
          <command>systemctl reboot</command>
        </action>
      </item>

      <item label="   Shutdown">
        <action name="Execute">
          <command>systemctl poweroff</command>
        </action>
      </item>

    </menu>

  </menu>

</openbox_menu>
